.sign_up__page
  .sign_up__page__header
    = image_tag ('material/logo/logo.png'), class: "logo"
  .sign_up__page__box
    .sign_up__page__box__title
      送付先住所登録
    .sign_up__page__box__in 
      = form_for @domicile do |a|  
        = render "devise/shared/error_messages", resource: @domicile
        
        .field 
          名字
          %span 必須
          = a.text_field :firstname, placeholder: "例) 山田"

        .field
          名前
          %span 必須
          = a.text_field :lastname, placeholder: "例) 彩"

        .field
          名字(ふりがな)
          %span 必須
          = a.text_field :firstname_kana, placeholder: "例) やまだ"

        .field
          名前(ふりがな)
          %span 必須
          = a.text_field :lastname_kana, placeholder: "例) あや"  
        

        .field
          郵便番号
          %span 必須
          = a.text_field :postal_code, placeholder: "ハイフンなしで入力してください"

        .field 
          都道府県
          %span 必須
          -# = a.text_field :prefecture_id
          
          = a.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt:"選択してください"}, {class:""}
        -# .field
        -#   都道府県
        -#   %span 必須
        -#   = a.text_field :shipping_origin
          
        .field
          市区町村
          %span 必須
          = a.text_field :city

        .field
          番地
          %span 必須
          = a.text_field :town

        .field 
          建物名(任意)
          = a.text_field :building

        .field
          電話番号(任意)
          = a.text_field :phone, placeholder: "ハイフンなしで入力してください"     

        .action
          = a.submit "登録"